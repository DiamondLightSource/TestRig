# You should have the environment variable ANDOR_SDK_ROOT set to the directory
# where the SDK is installed, usually /usr or /usr/local

export LIBRARY_PATH="$LIBRARY_PATH:$ANDOR_SDK_ROOT/lib"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$ANDOR_SDK_ROOT/lib"
export CPATH="$CPATH:$ANDOR_SDK_ROOT/include"
export BITFLOW_INSTALL_DIRS="$ANDOR_SDK_ROOT"